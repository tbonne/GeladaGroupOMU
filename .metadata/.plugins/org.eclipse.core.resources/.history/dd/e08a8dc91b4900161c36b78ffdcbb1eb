package LHP;

public class Gut {

	private double food;
	private Primate myPrimate;
	private double maxGutSize;

	public Gut(Primate p, double initialAmount){
		myPrimate = p;
		food = initialAmount;
		maxGutSize=Parameter.maxGutSize;
	}

	public Primate getMyPrimate(){
		return myPrimate;
	}

	public double convertFoodToEnergy(){
		food = food - (Parameter.foodDigestionRate)/Parameter.stepsPerDay;
		if(food<0)food=0;
		return food;
	}
	public void addFood(double d){
		food=food+d;
		if(food>maxGutSize)food=maxGutSize;
	}
	public double getFood(){
		return food;
	}
	public double getGutSpaceLeft(){
		return (maxGutSize-food)/maxGutSize;
	}

	public boolean getHungry(boolean eating){
		boolean retval = false; 
		if(eating ){
			if(this.getGutSpaceLeft()<0.3){
				retval = false;	
			}else{
				retval = true;
			}
		} else {
			if(this.getGutSpaceLeft() > 0.6){
				retval = true;				
			} else {
				retval = false;
			}
		}
		return retval;
	}

}
